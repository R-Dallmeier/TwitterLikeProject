extends layoutBasic

block left
    div(class="row mt-3 ms-5")
        div(class="fs-3")
            i(class="bi bi-house-door-fill")
            a(href="/dashboard" class="ms-4 font-size-2 align-middle text-decoration-none text-dark fw-bold") Startseite
    div(class="row mt-2 ms-5")
        div(class="fs-3 d-grid")
            a(class="btn btn-primary rounded-pill" href="/login" role="button") Login
    div(class="row mt-2 ms-5")
        div(class="fs-3 d-grid")
            a(class="btn btn-primary rounded-pill" href="/register" role="button") Registrieren

block middle
    div(class="list-group mt-4 ms-5")
        each other in othersRows
            div(class="list-group-item ps-0")
                div(class="container-fluid")
                    div(class="row")
                        div(class="col ps-4")
                            img(class="logoUser rounded-circle" src="/img/users/"+other.profile_pic+".png")
                        div(class="col-10 ps-0 pt-1")
                            p(class="fs-3 fw-bold") #{other.name}
                                span(class="text-muted")  @#{other.name} &#8226 #{other.post_created}
                            p(class="fs-3") #{other.text}




