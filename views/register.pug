extends layoutBasic

block left
    div(class="row mt-3 ms-5")
        div(class="fs-3")
            i(class="bi bi-house-door-fill")
            a(href="/dashboard" class="ms-4 font-size-2 align-middle text-decoration-none text-dark") Startseite
    div(class="row mt-2 ms-5")
        div(class="fs-3 d-grid")
            a(class="btn btn-primary rounded-pill" href="/login" role="button") Login
    div(class="row mt-2 ms-5")
        div(class="fs-3 d-grid")
            a(class="btn btn-primary rounded-pill" href="/register" role="button") Registrieren

block middle
    h1(class="mt-3 ms-5") Registrieren
        form(action="/register" method="post")
            div(class="form-group")
                label(class="fs-4" for="inputUsername") Nutzername
                input(type="text", class="form-control", id="inputUsername", placeholder="Nutzername", name="username")
            div(class="form-group")
                label(class="fs-4" for="inputBirthday") Geburtsdatum
                input(type="date", class="form-control", id="inputBirthday" value="2000-01-01", name="birthday")
            div(class="form-group")
                label(class="fs-4" for="inputPassword") Passwort
                input(type="password", class="form-control", id="inputPassword" placeholder="Passwort eingeben", name="password")
            div(class="form-group")
                button(type="submit", class="btn btn-primary") Registrieren

        if register_error
            div(class="alert alert-danger fs-5 mt-4" role="alert") #{register_error}




